@model FilmsJust.Models.Genero

@{
    ViewData["Title"] = "Nova categoria";
}

<div class="border border-light rounded-lg p-5 shadow">
    <h6>Altera Categoria</h6>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                 <input type="hidden" asp-for="GeneroId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GeneroNome" class="col-form-label col-form-label-sm"></label>
                    <input asp-for="GeneroNome" class="form-control form-control-sm" />
                    <span asp-validation-for="GeneroNome" class="text-danger"></span>
                </div>

                <input asp-for="GeneroId" hidden/>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Index" class="btn btn-light btn-sm">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>